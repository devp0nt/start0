{
  "extends": "../../../.mono0/tsconfig.site.json",
  "include": ["./src/**/*"],
  "exclude": ["**/dist/**/*", "**/node_modules/**/*", "**/public/**/*"],
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "noEmitOnError": false,
    "outDir": "./dist",
    "tsBuildInfoFile": "../../../node_modules/.cache/tsbuildinfo/@site/core/.tsbuildinfo",
    "rootDir": "./src",
    "paths": {
      "@site/core/*": ["./src/*"],
      "@backend/trpc-router": ["../../backend/router/trpc/src/index.ts"],
      "@backend/trpc-router/*": ["../../backend/router/trpc/src/*"],
      "@appConfig/backend/*": ["../../../modules/appConfig/backend/src/*"],
      "@backend/core/*": ["../../backend/core/src/*"],
      "@idea/backend/*": ["../../../modules/idea/backend/src/*"]
    }
  },
  "references": [
    {
      "path": "../../backend/router/trpc/tsconfig.json"
    },
    {
      "path": "../../../modules/appConfig/backend/tsconfig.json"
    },
    {
      "path": "../../backend/core/tsconfig.json"
    },
    {
      "path": "../../../modules/idea/backend/tsconfig.json"
    }
  ]
}
