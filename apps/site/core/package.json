{
  "name": "@site/core",
  "private": true,
  "type": "module",
  "scripts": {
    "types": "tsc --noEmit",
    "build": "tsc --build",
    "watch": "tsc --watch --noEmitOnError false --skipLibCheck --noCheck --assumeChangesOnlyAffectDirectDependencies  --preserveWatchOutput",
    "clean": "rimraf ./dist"
  },
  "dependencies": {
    "@backend/trpc-router": "workspace:*"
  },
  "exports": {
    "./components/*": {
      "import": "./dist/components/*.js",
      "types": "./dist/components/*.d.ts",
      "node": [
        "./src/components/*.ts",
        "./src/components/*.tsx"
      ]
    },
    "./lib/*": {
      "import": "./dist/lib/*.js",
      "types": "./dist/lib/*.d.ts",
      "node": [
        "./src/lib/*.ts",
        "./src/lib/*.tsx"
      ]
    }
  }
}
