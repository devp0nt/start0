{
  "include": [
    "**/*",
    "**/.server/**/*",
    "**/.client/**/*",
    ".react-router/types/**/*",
    "../../modules/**/*",
    "../backend/src/**/route.*.model.ts"
  ],
  "exclude": ["../../modules/**/*.test.ts"],
  "compilerOptions": {
    "baseUrl": "../../",
    "rootDirs": [".", "./.react-router/types"],
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "types": ["node", "vite/client", "bun"],
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "paths": {
      "@ideanick/site/*": ["./apps/site/src/*"],
      "@ideanick/backend/*": ["./apps/backend/src/*"],
      "@ideanick/modules/*": ["./modules/*"]
    },
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true
  }
}
