    "./.react-router/types/**/*",
    "./**/*",
    "../../modules/**/*.si.*",
    "../../modules/**/*.si/**/*",
    "../../modules/**/*.sh.*",
    "../../modules/**/*.sh/**/*",
    "../backend/**/*.si.*",
    "../backend/**/*.si/**/*",
    "../backend/**/*.sh.*",
    "../backend/**/*.sh/**/*",
    "../../tools/**/*.si.*",
    "../../tools/**/*.si/**/*",
    "../../tools/**/*.sh.*",
    "../../tools/**/*.sh/**/*"
  ],
  "exclude": ["**/dist/**/*", "**/node_modules/**/*", "./**/*.be.*", "./**/*.be/**/*", "./**/*.to.*", "./**/*.to/**/*"]
}
