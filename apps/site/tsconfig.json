{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "types": ["node", "vite/client", "bun"],
    "target": "ES2022",
    "module": "ES2022",
    "rootDir": "../../",
    "rootDirs": ["../../", ".", "./.react-router/types"],
    "outDir": "./dist"
  },
  "references": [{ "path": "../backend" }],
  "include": [
    "./.react-router/types/**/*",
    "./**/*",
    "../../modules/**/*.si.*",
    "../../modules/**/*.si/**/*",
    "../../modules/**/*.sh.*",
    "../../modules/**/*.sh/**/*",
    "../backend/**/*.si.*",
    "../backend/**/*.si/**/*",
    "../backend/**/*.sh.*",
    "../backend/**/*.sh/**/*",
    "../../tools/**/*.si.*",
    "../../tools/**/*.si/**/*",
    "../../tools/**/*.sh.*",
    "../../tools/**/*.sh/**/*",
    "../../modules/prisma/src/types.be.ts"
  ],
  "exclude": ["**/dist/**/*", "**/node_modules/**/*", "./**/*.be.*", "./**/*.be/**/*", "./**/*.to.*", "./**/*.to/**/*"]
}

