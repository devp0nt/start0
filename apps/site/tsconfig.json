    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "types": ["node", "vite/client", "bun"],
    "target": "ES2022",
    "module": "ES2022",
    "rootDir": "../../",
    "rootDirs": ["../../", ".", "./.react-router/types"],
