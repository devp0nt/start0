{
  "name": "@backend/services",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=development bun --watch src/dev.ts",
    "types": "tsc --noEmit",
    "start": "NODE_ENV=production bun dist/api.js",
    "build": "tsc --build",
    "watch": "tsc --watch --noEmitOnError false --skipLibCheck --noCheck --assumeChangesOnlyAffectDirectDependencies  --preserveWatchOutput",
    "clean": "rimraf ./dist"
  },
  "dependencies": {
    "@backend/core": "workspace:*",
    "@backend/hono-router": "workspace:*",
    "@backend/trpc-router": "workspace:*"
  }
}
