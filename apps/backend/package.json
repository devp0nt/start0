{
  "name": "@/backend",
  "private": true,
  "type": "module",
  "dependencies": {
    "@/appConfig": "workspace:*",
    "@/idea": "workspace:*",
    "@/lib": "workspace:*",
    "@/prisma": "workspace:*"
  },
  "scripts": {
    "dev": "cross-env NODE_ENV=development bun run --hot src/services/dev.ts",
    "build": "rimraf dist && cross-env NODE_ENV=production bun build src/services/* --outdir dist --target bun",
    "types": "rimraf dist && tsc",
    "start:api": "bun run dist/app.js",
    "start:worker": "bun run dist/app.js"
  }
}
