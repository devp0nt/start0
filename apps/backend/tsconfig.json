{
  "include": ["./src/**/*", "../../modules/**/*", "../site/app/routes.ts", "../site/app/lib/page0.ts"],
  "exclude": ["../../modules/**/*.test.ts"],
  "compilerOptions": {
    "baseUrl": "../../",
    "strict": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "outDir": "./dist",
    "verbatimModuleSyntax": true,
    "paths": {
      "@ideanick/backend/*": ["./apps/backend/src/*"],
      "@ideanick/site/*": ["./apps/site/app/*"],
      "@ideanick/modules/*": ["./modules/*"]
    }
  }
}
