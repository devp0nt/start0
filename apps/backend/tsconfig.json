{
  "include": ["./src/**/*", "../../modules/**/*", "../site/src/react-router/routes.ts", "../site/src/lib/page0.ts"],
  "exclude": ["../../modules/**/*.test.ts", "**/*.to.ts"],
  "compilerOptions": {
    "baseUrl": "../../",
    "strict": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "outDir": "./dist",
    "verbatimModuleSyntax": true,
    "paths": {
      "@ideanick/backend/*": ["./apps/backend/src/*"],
      "@ideanick/site/*": ["./apps/site/src/*"],
      "@ideanick/modules/lib/*": ["./modules/lib/src/*"],
      "@ideanick/modules/prisma/*": ["./modules/prisma/src/*"],
      "@ideanick/modules/idea/*": ["./modules/idea/src/*"],
      "@ideanick/modules/appConfig/*": ["./modules/appConfig/src/*"],
      "@ideanick/tools/*": ["./tools/src/*"]
    }
  }
}
