{
  "include": ["./src/**/*", "../../modules/**/*", "../site/app/**/*"],
  "exclude": ["../site/app/root.tsx", "../site/app/routes/**/*"],
  "compilerOptions": {
    "baseUrl": "../../",
    "strict": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "outDir": "./dist",
    "verbatimModuleSyntax": true,
    "paths": {
      "@shmoject/backend/*": ["./apps/backend/src/*"],
      "@shmoject/site/*": ["./apps/site/app/*"],
      "@shmoject/modules/*": ["./modules/*"]
    }
  }
}
