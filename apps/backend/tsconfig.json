{
  "include": ["./src/**/*", "../../modules/**/*"],
  "compilerOptions": {
    "baseUrl": "../../",
    "rootDirs": ["../../modules", "./src"],
    "strict": true,
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "outDir": "./dist",
    "paths": {
      "@shmoject/backend/*": ["./apps/backend/src/*"],
      "@shmoject/site/*": ["./apps/site/src/*"],
      "@shmoject/modules/*": ["./modules/*"]
    }
  }
}
