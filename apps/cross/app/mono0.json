{
  "name": "@cross/app",
  "preset": ["app", "crossWithTsconfig"],
  "deps": ["#crossModule", "#crossBaseModule"],
  "tsconfig": {
    "value": {
      "include": ["**/*.ts", "**/*.tsx", "**/*.js", ".expo/types/**/*.ts", "expo-env.d.ts"],
      "compilerOptions": {
        "module": "preserve",
        "moduleDetection": "force",
        "customConditions": ["react-native"],
        "target": "ESNext"
      },
      "exclude": ["./node_modules", "./babel.config.js", "./metro.config.js", "./jest.config.js", "./android", "./ios"]
    }
  },
  "packageJson": {
    "value": {
      "type": null,
      "scripts": {
        "lint:expo": "expo lint"
      }
    }
  }
}
