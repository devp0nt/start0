{
  "name": "@cross/entry",
  "preset": ["app", "crossWithTsconfig"],
  "deps": ["#crossModule", "#crossBaseModule", "@client/base"],
  "tsconfig": {
    "settings": {
      "addUnitsSrcToPaths": { "match": "!#cold", "indexFile": true },
      "addUnitsAsNodeModulesToPaths": { "match": "#cold" }
    },
    "value": {
      "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"],
      "compilerOptions": {
        "module": "preserve",
        "moduleDetection": "force",
        "customConditions": ["react-native"],
        "target": "ESNext"
      },
      "exclude": [
        "./node_modules",
        "./babel.config.js",
        "./metro.config.js",
        "./jest.config.js",
        "./android",
        "./ios",
        "./**/dist/**/*",
        "./**/node_modules/**/*",
        "./**/public/**/*"
      ]
    }
  },
  "packageJson": {
    "value": {
      "type": null,
      "scripts": {
        "lint:expo": "expo lint"
      }
    }
  }
}
