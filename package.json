{
  "name": "ideanick",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc --build",
    "build:clean": "rimraf .//node_modules/.cache/tsbuildinfo && rimraf **/dist",
    "watch": "concurrently \"bun run gen0 watch\" \"bun run mono0 watch\" --names 'gen0,mono0'",
    "watch:build": "tsc --build --watch --preserveWatchOutput",
    "watch:all": "concurrently \"bun run gen0 watch\" \"bun run mono0 watch\" \"bun run watch:build\" --names 'gen0,mono0,build'",
    "lint": "bun run lint:base .",
    "lint:base": "eslint --cache --cache-location node_modules/.cache/eslint/.eslintcache",
    "lint:fix": "bun run lint --fix",
    "lint:each": "bun run --filter '**' lint",
    "lint:clean": "rimraf node_modules/.cache/eslint/.eslintcache",
    "format": "bun run format:base .",
    "format:base": "prettier --cache --cache-location node_modules/.cache/prettier/.prettiercache --write",
    "format:clean": "rimraf node_modules/.cache/prettier/.prettiercache",
    "prepare": "husky",
    "types": "bun run clean && tsc --build",
    "clean": "bun run build:clean && bun run lint:clean && bun run format:clean"
  },
  "dependencies": {
    "cross-env": "^10.0.0",
    "date-fns": "^4.1.0",
    "deepmerge": "^4.3.1",
    "lodash": "^4.17.21",
    "simple-eval": "^2.0.0",
    "zod": "^4.1.9"
  },
  "devDependencies": {
    "@devp0nt/gen0": "^1.0.0-next.42",
    "@devp0nt/mono0": "^1.0.0-next.56",
    "@types/bun": "latest",
    "@types/debug": "^4.1.12",
    "@types/lodash": "^4.17.20",
    "@types/node": "^20",
    "eslint": "^9.36.0",
    "eslint-config-love": "^125.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.2"
  },
  "exports": {},
  "workspaces": {
    "packages": [
      "./apps/admin/app",
      "./apps/backend/services",
      "./modules/prisma/backend",
      "./modules/prisma/shared",
      "./apps/site/app",
      "./tools"
    ],
    "catalog": {}
  }
}
