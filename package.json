    "vite": "^6.3.3",
    "vite-plugin-devtools-json": "^1.0.0",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "scripts": {
    "be": "bun --filter '@shmoject/backend'",
    "si": "bun --filter '@shmoject/site'",
    "mo": "bun --filter '@shmoject/modules'",
    "types": "bun run --filter '*' types",
    "build": "bun run --filter '*' build",
    "dev": "bun run --filter '*' dev",
    "test": "bun run --filter '*' test",
    "lint": "biome check --write",
    "prune": "rm -rf .react-router node_modules .vite .turbo dist build && bun install",
    "prepare": "husky"
  },
  "workspaces": {
    "packages": [
      "apps/*",
      "modules"
    ],
    "catalog": {
