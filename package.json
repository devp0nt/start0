{
  "name": "shmoject",
  "private": true,
  "devDependencies": {
    "@biomejs/biome": "2.2.0",
    "@react-router/dev": "^7.7.1",
    "@types/bun": "latest",
    "@types/debug": "^4.1.12",
    "@types/lodash": "^4.17.20",
    "@types/node": "^20",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^4.3.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
