{
  "extends": "../.mono0/tsconfig.tools.json",
  "include": ["./src/**/*"],
  "exclude": ["./**/dist/**/*", "./**/node_modules/**/*", "./**/public/**/*"],
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "paths": {
      "@tools/shared/*": ["./src/*"]
    },
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "noEmitOnError": false,
    "composite": true,
    "tsBuildInfoFile": "../node_modules/.cache/tsbuildinfo/@tools/shared/.tsbuildinfo"
  },
  "references": []
}
