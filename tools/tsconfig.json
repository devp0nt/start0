{
  "extends": "../.mono0/tsconfig.tools.json",
  "include": ["./src/**/*"],
  "exclude": ["**/dist/**/*", "**/node_modules/**/*", "**/public/**/*"],
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "noEmitOnError": false,
    "outDir": "./dist",
    "tsBuildInfoFile": "../node_modules/.cache/tsbuildinfo/@tools/shared/.tsbuildinfo",
    "rootDir": "./src",
    "paths": {
      "@tools/shared/*": ["./src/*"]
    }
  },
  "references": []
}
