{
  "compilerOptions": {
    "rootDir": ".",
    "composite": true,
    "strict": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "verbatimModuleSyntax": true,
    "resolveJsonModule": true
  },
  "exclude": ["**/dist/**/*", "**/node_modules/**/*", "**/public/**/*"]
}
