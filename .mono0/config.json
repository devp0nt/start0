{
  "packageJson": {
    "path": "../package.json",
    "settings": {
      "clearWorkspaces": "workspaces.papackages",
      "addWorkspaces": "workspaces.packages",
      "clearWorkspaceDeps": false,
      "addWorkspaceDeps": false,
      "clearExports": false,
      "addExportsFromDist": false,
      "addExportsFromSrc": false
    },
    "value": {
      "name": "ideanick",
      "private": true,
      "type": "module"
    }
  },
  "tsconfigs": {
    "root": {
      "path": "../tsconfig.json",
      "value": {
        "extends": "$base"
      }
    },
    "base": {
      "path": "../tsconfig.base.json",
      "value": {
        "compilerOptions": {
          "lib": ["ESNext"],
          "types": ["node", "bun"],
          "target": "ESNext",
          "strict": true,
          "jsx": "react-jsx",
          "esModuleInterop": true,
          "skipLibCheck": true,
          "module": "ESNext",
          "moduleResolution": "Bundler",
          "verbatimModuleSyntax": true,
          "resolveJsonModule": true
        }
      }
    },
    "shared": {
      "path": "./tsconfig.shared.json",
      "value": {
        "extends": "$base"
      }
    },
    "backend": {
      "path": "./tsconfig.backend.json",
      "value": {
        "extends": "$base"
      }
    },
    "site": {
      "path": "./tsconfig.site.json",
      "value": {
        "extends": "$base",
        "compilerOptions": {
          "lib": ["DOM", "DOM.Iterable", "ES2022"],
          "types": ["node", "bun", "vite/client"],
          "target": "ES2022",
          "module": "ES2022"
        }
      }
    },
    "tools": {
      "path": "./tsconfig.tools.json",
      "value": {
        "extends": "$base"
      }
    }
  },
  "filesSelectors": {
    "exclude": ["**/dist/**/*", "**/node_modules/**/*", "**/public/**/*"]
  },
  "unitsSelectors": {
    "backendCore": ["@prisma0/backend", "@lib"]
  },
  "settings": {
    "onPackageJsonsDepsChangedCommand": "bun install"
  },
  "presets": {
    "force": {
      "packageJson": {
        "settings": {
          "clearWorkspaces": false,
          "addWorkspaces": false,
          "clearWorkspaceDeps": true,
          "addWorkspaceDeps": true,
          "clearExports": true,
          "addExportsFromDist": true,
          "addExportsFromSrc": false
        },
        "value": {
          "private": true,
          "type": "module"
        }
      },
      "tsconfig": {
        "settings": {
          "clearPaths": true,
          "setSrcAsRootDir": true,
          "addSrcToInclude": true,
          "addSelfSrcToPaths": true,
          "addUnitsSrcToPaths": true,
          "addUnitsDistToPaths": false,
          "clearReferences": true,
          "addDepsAsReferences": true,
          "addDeepDepsAsReferences": false
        },
        "value": {
          "compilerOptions": {
            "composite": true,
            "declaration": true,
            "declarationMap": true,
            "emitDeclarationOnly": false,
            "noEmitOnError": false,
            "outDir": "./dist",
            "declarationDir": "./dist",
            "tsBuildInfoFile": "~/node_modules/.cache/tsbuildinfo/{{name}}/.tsbuildinfo"
          },
          "exclude": ["$exclude"]
        }
      }
    },
    "shared": {
      "tsconfig": {
        "extends": "$shared"
      },
      "tags": ["shared"]
    },
    "backend": {
      "tsconfig": {
        "extends": "$backend"
      },
      "tags": ["backend"]
    },
    "site": {
      "tsconfig": {
        "extends": "$site"
      },
      "tags": ["site"]
    },
    "tools": {
      "tsconfig": {
        "extends": "$tools"
      },
      "tags": ["tools"]
    }
  }
}
