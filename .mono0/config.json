{
  "tsconfigs": {
    "root": {
      "path": "../tsconfig.json",
      "value": {
        "extends": "$base"
      }
    },
    "base": {
      "path": "../tsconfig.base.json",
      "value": {
        "compilerOptions": {
          "strict": true,
          "jsx": "react-jsx",
          "esModuleInterop": true,
          "skipLibCheck": true,
          "module": "ESNext",
          "moduleResolution": "Bundler",
          "verbatimModuleSyntax": true,
          "resolveJsonModule": true
        },
        "exclude": ["$exclude"]
      }
    },
    "shared": {
      "path": "./tsconfig.shared.json",
      "value": {
        "extends": "$base"
      }
    },
    "backend": {
      "path": "./tsconfig.backend.json",
      "value": {
        "extends": "$base"
      }
    },
    "site": {
      "path": "./tsconfig.site.json",
      "value": {
        "extends": "$base"
      }
    },
    "tools": {
      "path": "./tsconfig.tools.json",
      "value": {
        "extends": "$base"
      }
    }
  },
  "filesSelectors": {
    "exclude": ["**/dist/**/*", "**/node_modules/**/*", "**/public/**/*"]
  },
  "unitsSelectors": {
    "backendCore": ["@prisma0/backend", "@lib"]
  },
  "settings": {
    "installCommand": "bun install",
    "autoIncludeSrc": true,
    "autoPathSrc": true
  },
  "presets": {
    "force": {
      "packageJson": {
        "private": true,
        "type": "module"
      },
      "tsconfig": {
        "compilerOptions": {
          "composite": true,
          "declaration": true,
          "declarationMap": true,
          "declarationDir": "./dist",
          "outDir": "./dist",
          "tsBuildInfoFile": "~/node_modules/.cache/tsbuildinfo/{{name}}/.tsbuildinfo"
        }
      }
    },
    "shared": {
      "tsconfig": {
        "extends": "$shared"
      },
      "tags": ["shared"]
    },
    "backend": {
      "tsconfig": {
        "extends": "$backend"
      },
      "tags": ["backend"]
    },
    "site": {
      "tsconfig": {
        "extends": "$site"
      },
      "tags": ["site"]
    },
    "tools": {
      "tsconfig": {
        "extends": "$tools"
      },
      "tags": ["tools"]
    }
  }
}
