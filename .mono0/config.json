{
  "tsconfigs": {
    "root": {
      "path": "../tsconfig.json",
      "value": {
        "extends": "$base"
      }
    },
    "base": {
      "path": "../tsconfig.base.json",
      "value": {
        "compilerOptions": {
          "lib": ["ESNext"],
          "types": ["node", "bun"],
          "target": "ESNext",
          "composite": true,
          "declaration": true,
          "declarationMap": true,
          "emitDeclarationOnly": false,
          "noEmitOnError": false,
          "strict": true,
          "jsx": "react-jsx",
          "esModuleInterop": true,
          "skipLibCheck": true,
          "module": "ESNext",
          "moduleResolution": "Bundler",
          "verbatimModuleSyntax": true,
          "resolveJsonModule": true
        }
      }
    },
    "shared": {
      "path": "./tsconfig.shared.json",
      "value": {
        "extends": "$base"
      }
    },
    "backend": {
      "path": "./tsconfig.backend.json",
      "value": {
        "extends": "$base"
      }
    },
    "site": {
      "path": "./tsconfig.site.json",
      "value": {
        "extends": "$base",
        "compilerOptions": {
          "lib": ["DOM", "DOM.Iterable", "ES2022"],
          "types": ["node", "bun", "vite/client"],
          "target": "ES2022",
          "module": "ES2022"
        }
      }
    },
    "tools": {
      "path": "./tsconfig.tools.json",
      "value": {
        "extends": "$base"
      }
    }
  },
  "filesSelectors": {
    "exclude": ["**/dist/**/*", "**/node_modules/**/*", "**/public/**/*"]
  },
  "unitsSelectors": {
    "backendCore": ["@prisma0/backend", "@lib"]
  },
  "settings": {
    "installCommand": "bun install",
    "autoIncludeSrc": true,
    "autoPathSrc": true
  },
  "presets": {
    "force": {
      "packageJson": {
        "private": true,
        "type": "module"
      },
      "tsconfig": {
        "compilerOptions": {
          "outDir": "./dist",
          "tsBuildInfoFile": "~/node_modules/.cache/tsbuildinfo/{{name}}/.tsbuildinfo"
        },
        "exclude": ["$exclude"]
      }
    },
    "shared": {
      "tsconfig": {
        "extends": "$shared"
      },
      "tags": ["shared"]
    },
    "backend": {
      "tsconfig": {
        "extends": "$backend"
      },
      "tags": ["backend"]
    },
    "site": {
      "tsconfig": {
        "extends": "$site"
      },
      "tags": ["site"]
    },
    "tools": {
      "tsconfig": {
        "extends": "$tools"
      },
      "tags": ["tools"]
    }
  }
}
