{
  "compilerOptions": {
    "strict": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "verbatimModuleSyntax": true,
    "resolveJsonModule": true,
    "paths": {
      "@/backend/*": [
        "./apps/backend/src/*"
      ],
      "@/site/*": [
        "./apps/site/src/*"
      ],
      "@/tools/*": [
        "./tools/src/*"
      ],
      "@/prisma/*": [
        "./modules/prisma/src/*"
      ],
      "@/appConfig/*": [
        "./modules/appConfig/src/*"
      ],
      "@/idea/*": [
        "./modules/idea/src/*"
      ],
      "@/lib/*": [
        "./modules/lib/src/*"
      ]
    }
  }
}