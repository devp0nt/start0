{
  "compilerOptions": {
    "rootDir": ".",
    "composite": true,
    "strict": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "verbatimModuleSyntax": true,
    "resolveJsonModule": true,
    "paths": {
      "@backend/*": ["./apps/backend/src/*"],
      "@lib/*": ["./modules/lib/src/*"],
      "@prisma0/backend/*": ["./modules/prisma/src/*"],
      "@site/app/*": ["./apps/site/app/src/*"],
      "@site/core/*": ["./apps/site/core/*"]
    }
  },
  "exclude": ["**/dist/**/*", "**/node_modules/**/*", "**/public/**/*"],
  "references": []
}
