{
  "extends": "./tsconfig.base.json",
  "references": [
    {
      "path": "./apps/backend/tsconfig.json"
    },
    {
      "path": "./modules/lib/tsconfig.json"
    },
    {
      "path": "./modules/prisma/tsconfig.json"
    },
    {
      "path": "./apps/site/app/tsconfig.json"
    },
    {
      "path": "./apps/site/routes/tsconfig.json"
    }
  ],
  "compilerOptions": {
    "paths": {
      "@backend/*": ["./apps/backend/src/*"],
      "@lib/*": ["./modules/lib/src/*"],
      "@prisma0/backend/*": ["./modules/prisma/src/*"],
      "@site/app/*": ["./apps/site/app/src/*"],
      "@site/routes/*": ["./apps/site/routes/*"]
    }
  }
}
