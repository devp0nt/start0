{
  "include": ["./**/*", "../apps/site/app/routes.ts"],
  "compilerOptions": {
    "baseUrl": "../",
    "strict": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "outDir": "./dist",
    "verbatimModuleSyntax": true,
    "paths": {
      "@shmoject/modules/*": ["./modules/*"],
      "@shmoject/backend/*": ["./apps/backend/src/*"],
      "@shmoject/site/*": ["./apps/site/app/*"]
    }
  }
}
