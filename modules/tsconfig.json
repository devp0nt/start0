{
  "include": ["./**/*", "../apps/site/src/react-router/**/*"],
  "exclude": [
    "../apps/site/.react-router/**/*",
    "../apps/site/src/react-router/routes/**/*",
    "../apps/site/src/react-router/root.tsx"
  ],
  "compilerOptions": {
    "baseUrl": "../",
    "strict": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "outDir": "./dist",
    "verbatimModuleSyntax": true,
    "paths": {
      "@ideanick/modules/lib/*": ["./modules/lib/src/*"],
      "@ideanick/modules/prisma/*": ["./modules/prisma/src/*"],
      "@ideanick/modules/idea/*": ["./modules/idea/src/*"],
      "@ideanick/modules/appConfig/*": ["./modules/appConfig/src/*"],
      "@ideanick/tools/*": ["./tools/src/*"],
      "@ideanick/backend/*": ["./apps/backend/src/*"],
      "@ideanick/site/*": ["./apps/site/src/*"]
    }
  }
}
