{
  "include": ["./**/*", "../apps/site/app/**/*"],
  "exclude": ["../apps/site/.react-router/**/*", "../apps/site/app/routes/**/*", "../apps/site/app/root.tsx"],
  "compilerOptions": {
    "baseUrl": "../",
    "strict": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "outDir": "./dist",
    "verbatimModuleSyntax": true,
    "paths": {
      "@ideanick/modules/*": ["./modules/*"],
      "@ideanick/backend/*": ["./apps/backend/src/*"],
      "@ideanick/site/*": ["./apps/site/app/*"]
    }
  }
}
