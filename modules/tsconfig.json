{
  "include": ["./**/*", "../apps/site/src/react-router/**/*"],
  "exclude": [
    "../apps/site/.react-router/**/*",
    "../apps/site/src/react-router/routes/**/*",
    "../apps/site/src/react-router/root.tsx"
  ],
  "compilerOptions": {
    "baseUrl": "../",
    "strict": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "outDir": "./dist",
    "verbatimModuleSyntax": true,
    "paths": {
      "@ideanick/modules/*": ["./modules/*"],
      "@ideanick/backend/*": ["./apps/backend/src/*"],
      "@ideanick/site/*": ["./apps/site/src/*"]
    }
  }
}
