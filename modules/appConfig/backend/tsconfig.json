{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "noEmitOnError": false,
    "outDir": "./dist",
    "declarationDir": "./dist",
    "tsBuildInfoFile": "~/node_modules/.cache/tsbuildinfo/@appConfig/backend/.tsbuildinfo",
    "rootDir": "./src",
    "paths": {
      "@appConfig/backend/*": ["./src/*"],
      "@backend/core/*": ["../../../apps/backend/core/src/*"]
    }
  },
  "exclude": ["**/dist/**/*", "**/node_modules/**/*", "**/public/**/*"],
  "extends": "../../../.mono0/tsconfig.backend.json",
  "include": ["./src/**/*"],
  "references": [
    {
      "path": "../../../apps/backend/core/tsconfig.json"
    }
  ]
}
