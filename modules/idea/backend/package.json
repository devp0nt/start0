{
  "name": "@idea/backend",
  "private": true,
  "type": "module",
  "exports": {
    "./*": {
      "import": "./dist/*.js",
      "types": "./dist/*.d.ts",
      "development": "./src/*.js"
    }
  },
  "scripts": {
    "types": "tsc --noEmit",
    "build": "tsc --build",
    "watch": "tsc --watch --noEmitOnError false --skipLibCheck --noCheck --assumeChangesOnlyAffectDirectDependencies  --preserveWatchOutput",
    "clean": "rimraf {{distDir}}"
  },
  "dependencies": {
    "@backend/core": "workspace:*",
    "@idea/shared": "workspace:*",
    "@prisma0/backend": "workspace:*"
  }
}
