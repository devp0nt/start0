{
  "extends": "../../../.mono0/tsconfig.backend.json",
  "exclude": ["**/dist/**/*", "**/node_modules/**/*", "**/public/**/*"],
  "compilerOptions": {
    "outDir": "./dist",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "noEmitOnError": false,
    "declarationDir": "./dist",
    "tsBuildInfoFile": "../../../node_modules/.cache/tsbuildinfo/@idea/backend/.tsbuildinfo",
    "rootDir": "./src",
    "paths": {
      "@idea/backend/*": ["./src/*"],
      "@backend/core/*": ["../../../apps/backend/core/src/*"],
      "@idea/shared/*": ["../shared/src/*"],
      "@prisma0/backend/*": ["../../prisma/backend/src/*"],
      "@prisma0/backend": ["../../prisma/backend/src/index.ts"]
    }
  },
  "include": ["src/**/*"],
  "references": [
    {
      "path": "../../../apps/backend/core/tsconfig.json"
    },
    {
      "path": "../shared/tsconfig.json"
    },
    {
      "path": "../../prisma/backend/tsconfig.json"
    }
  ]
}
