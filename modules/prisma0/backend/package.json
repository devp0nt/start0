{
  "name": "@prisma0/backend",
  "private": true,
  "type": "module",
  "scripts": {
    "types": "tsc --noEmit",
    "build": "tsc --build",
    "watch": "tsc --watch --noEmitOnError false --skipLibCheck --noCheck --assumeChangesOnlyAffectDirectDependencies  --preserveWatchOutput",
    "clean": "rimraf ./dist"
  },
  "dependencies": {
    "@idea/shared": "workspace:*"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts",
      "node": [
        "./src/index.ts",
        "./src/index.tsx"
      ]
    },
    "./*": {
      "import": "./dist/*.js",
      "types": "./dist/*.d.ts",
      "node": [
        "./src/*.ts",
        "./src/*.tsx"
      ]
    }
  }
}
